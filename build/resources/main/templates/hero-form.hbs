{{#partial "content"}}

    {{#if editTask}}
        <h1>Edit this Hero!</h1>
        <form action="/heroes/{{hero.id}}" method="post">
            <br>
            <label for="name">Edit this heroes name</label>
            <input id="name" name="name" type="text" value="{{hero.name}}">
            <br>
            <label for="">Edit this heroes age</label>
            <input id="age" name="age" type="number" value="{{hero.age}}">
            <br>
            <label for="">Edit this heroes powers</label>
            <input id="powers" name="powers" type="text" value="{{hero.powers}}">
            <br>
            <label for="">Edit this heroes weakness</label>
            <input id="weakness" name="weakness" type="text" value="{{hero.weakness}}">
            <br>
            <label for="squadId">Update this heroes squad:</label>
            <select id="squadId" name="squadId">
                {{#each categories}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right squad?<a href="/squad/new">Add a new one first.</a></p>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h2>Add a new Hero!</h2>

        <form action="/heroes" method="post">
            {{#if squads}}
                <label for="name">Hero Name</label>
                <input id="name" name="name" type="text">
                <label for="squadId">Place this hero in here:</label>
                <select id="squadId" name="squadId">
                    {{#each squad}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right squad?<a href="/squads/new">Add a new one first.</a></p>
            {{else}}
                <h3> You'll need to add a squad before you add a hero. <a
                        href="/squads/new">Add one here.</a> </h3>
            {{/if}}
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}