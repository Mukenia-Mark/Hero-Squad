{{#partial "content"}}
    {{#if editSquad}}
        <h1>Edit this squad!</h1>
        <form action="/squads/{{squad.id}}" method="post">
            <br>
            <label for="name">Edit this squads name</label>
            <input id="newSquadName" name="newSquadName" type="text" value="{{squad.name}}">
            <br>
            <label for="cause">Edit this squads cause</label>
            <input id="newSquadCause" name="newSquadCause" type="text" value="{{squad.cause}}">
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h1>Add a new Category!</h1>
        <form action="/squads" method="post">
            <label for="name">Squad Name</label>
            <input id="name" name="name" type="text">
            <label for="cause">Squad Cause</label>
            <input id="cause" name="cause" type="text">
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}